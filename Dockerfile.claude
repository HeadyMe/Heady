# HeadyClaude Dockerfile
FROM node:20-alpine

WORKDIR /app

# Install system dependencies
RUN apk add --no-cache \
    curl \
    bash \
    python3

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm ci --only=production

# Copy source code
COPY src/ ./src/
COPY configs/ ./configs/

# Create claude directories
RUN mkdir -p /app/data /app/models /app/prompts /app/context

# Set environment
ENV NODE_ENV=production
ENV CLAUDE_MODE=fast
ENV MODEL_VERSION=claude-opus-4.6
ENV THINKING_MODE=fast
ENV CONTEXT_WINDOW=200k
ENV ARTIFACT_SUPPORT=enabled
ENV CODE_GENERATION=optimized

# Expose ports
EXPOSE 4800 4801

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=60s --retries=3 \
  CMD curl -f http://localhost:4800/health || exit 1

# Start HeadyClaude service
CMD ["node", "src/hc/heady-claude-optimized.js"]
