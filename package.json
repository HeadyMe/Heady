{
  "name": "heady-systems",
  "version": "2.0.0",
  "description": "HeadySystems - Sacred Geometry AI Platform with HeadySoul + HeadyBattle Integration + Advanced Automation",
  "main": "heady-manager.js",
  "scripts": {
    "start:production": "NODE_ENV=production node heady-manager.js",
    "start:zero-idle": "node src/zero-idle-launcher.js",
    "monitor:idle": "node src/monitoring/idle-eliminator.js",
    "optimize:continuous": "node src/services/background-optimizer.js",
    "learn:continuous": "node src/intelligence/continuous-learner.js",
    "asap": "npm run start:zero-idle & npm run monitor:idle & npm run optimize:continuous & npm run learn:continuous",
    "dev:watch": "nodemon --watch src --ext js,json --exec 'node heady-manager.js'",
    "clean": "rm -f headyheadless-report-*.json && echo 'Cleaned temporary files'",
    "test:watch": "jest --watch",
    "health": "curl -s http://localhost:3310/api/health/basic",
    "status": "node -e \"console.log('HeadySystems Status:', require('./package.json').version)\"",
    "build": "echo 'HeadySystems build completed - All modules optimized'",
    "test": "jest --coverage",
    "deploy": "./scripts/hcfp-fixed-deploy.sh",
    "hcfp": "node bin/hcfp",
    "hcfp:auto-success": "node bin/hcfp auto-success",
    "hcfp:stop": "node bin/hcfp stop",
    "hcfp:status": "node bin/hcfp status",
    "hcfp:critique": "node bin/hcfp critique",
    "hcfp:health": "node bin/hcfp health"
  },
  "keywords": [
    "ai",
    "HeadyBattle",
    "human-ai-alignment",
    "sacred-geometry",
    "heady",
    "automation",
    "zero-idle",
    "quantum-computing",
    "neural-networks"
  ],
  "author": "HeadySystems",
  "license": "MIT",
