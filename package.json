    "express-rate-limit": "^8.2.1",
    "glob": "^13.0.5",
    "helmet": "^8.1.0",
    "joi": "^17.13.3",
    "jsdom": "^28.1.0",
    "lodash": "^4.17.21",
    "moment": "^2.30.1",
    "morgan": "^1.10.0",
    "openai": "^4.71.1",
    "puppeteer": "^23.8.0",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^10.0.0",
    "winston": "^3.19.0",
    "ws": "^8.19.0"
