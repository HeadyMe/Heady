# HeadyCodex Dockerfile - GPT-Codex 5.3 Integration
FROM node:20-alpine

WORKDIR /app

# Install system dependencies
RUN apk add --no-cache \
    curl \
    bash \
    python3

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm ci --only=production

# Copy source code
COPY src/ ./src/
COPY configs/ ./configs/

# Create codex directories
RUN mkdir -p /app/data /app/models /app/prompts /app/code_completion

# Set environment
ENV NODE_ENV=production
ENV CODEX_MODE=enhanced
ENV MODEL=gpt-codex-5.3
ENV CODE_GENERATION=optimized
ENV COMPLETION_QUALITY=maximum
ENV CONTEXT_AWARENESS=enhanced
ENV MULTI_LANGUAGE_SUPPORT=enabled

# Expose ports
EXPOSE 5800 5801

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=60s --retries=3 \
  CMD curl -f http://localhost:5800/health || exit 1

# Start HeadyCodex service
CMD ["node", "src/ai/codex-integration.js"]
